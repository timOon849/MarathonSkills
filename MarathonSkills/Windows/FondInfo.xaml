<Window x:Class="MarathonSkills.Windows.FondInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о фонде" Height="520" Width="800">
    <Grid>
        <!-- Заголовок -->
        <TextBlock x:Name="FundNameTxt" Text="Информация о фонде"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>

        <!-- Кнопка закрытия (X) -->
        <Button Content="❌"
                FontSize="18"
                Foreground="Red"
                Background="Transparent"
                BorderBrush="Transparent"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Click="CloseButton_Click"/>

        <Ellipse x:Name="LogoEllipse" Stretch="Uniform" Width="170"
         Height="170"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         Margin="0,0,0,200">
            <Ellipse.Fill>
                <ImageBrush x:Name="LogoPathTxt" ImageSource="C:\Users\202215\Source\Repos\timOon849\MarathonSkills\MarathonSkills\Materials\the-red-cross-logo.png" />
                <!-- Укажите путь к вашему логотипу -->
            </Ellipse.Fill>
        </Ellipse>

        <!-- Описание организации -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="20,225,20,20">
                <TextBlock x:Name="FundInfoTxt" TextWrapping="WrapWithOverflow"
                       FontSize="16"
                       Margin="0,10,0,0">
                </TextBlock>
            </ScrollViewer>
    </Grid>
</Window>