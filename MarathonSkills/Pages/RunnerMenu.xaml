<Page x:Class="MarathonSkills.Pages.RunnerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunnerMenu">

    <Grid Background="#FFEBEBEB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Background="#FF00903E" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
                <Button Content="Назад"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="GoBackButton_Click" Width="70" Height="30" Margin="0,0,30,0"/>
                <TextBlock Text="MARATHON SKILLS 2016" FontFamily="Open Sans Semibold " FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <Button Content="Logout" FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="LogoutButton_Click" Width="70" Height="30" Margin="330,0,0,0"/>
            </StackPanel>
        </Grid>
        <Grid Margin="66,5,66,0" Grid.Row="1" Grid.RowSpan="2">
            <Label Content="Меню бегуна" HorizontalAlignment="Center" Margin="0,21,0,265" FontSize="24" FontWeight="Bold" Width="168"/>

            <Grid Margin="166,76,166,76">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="RegistrationButton_Click" Width="150" Height="55" Margin="5" Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Регистрация на
                     марафон" FontFamily="Open Sans Light" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
                </Button>
                <Button FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="MyResultsButton_Click" Width="150" Height="55" Margin="5" Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="Мои результаты" FontFamily="Open Sans Light" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
                </Button>

                <Button FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="EditProfileButton_Click" Width="150" Height="55" Margin="5" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Редактирование
                               профиля" FontFamily="Open Sans Light" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
                </Button>
                <Button Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100"  Click="MySponsorButton_Click" Width="150" Height="55" Margin="5" Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="Мой спонсор" FontFamily="Open Sans Light" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
                </Button>

                <Button Content="Контакты" FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="ContactsButton_Click" Width="150" Height="55" Margin="5" Grid.Row="2" Grid.Column="0"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
