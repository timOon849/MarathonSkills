<Page x:Class="MarathonSkills.Pages.ToBeRunner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToBeRunner">

    <Grid Background="#FFEBEBEB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Background="#FF00903E" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
                <Button Content="Назад"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="GoBackButton_Click" Width="70" Height="30" Margin="0,0,30,0"/>
                <TextBlock Text="MARATHON SKILLS 2016" FontFamily="Open Sans Semibold " FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>

            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,112,0,0">
            <Button Content="Я участвовал ранее"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="DoEarlierButton_Click" Height="45" Margin="0,0,0,10" Width="240"/>
            <Button Content="Я новый участник"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="NewRunnerButton_Click" Height="45" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Content="Login" FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="LoginButton_Click" Margin="710,270,10,55" Grid.Row="1" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
