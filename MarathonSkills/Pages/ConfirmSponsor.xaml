<Page x:Class="MarathonSkills.Pages.ConfirmSponsor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmSponsor">

    <Grid Background="#FFEBEBEB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Background="#FF00903E" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
                <Button Content="Назад"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Click="GoBackButton_Click" Width="70" Height="30" Margin="0,0,30,0" Background="#FFFDC100"/>
                <TextBlock Text="MARATHON SKILLS 2016" FontFamily="Open Sans Semibold " FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>

            </StackPanel>
        </Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="708" Height="307" Grid.Row="1">
            <Label Content="Спасибо за вашу спонсорскую поддержку!" FontFamily="Open Sans Light" FontSize="20" HorizontalAlignment="Center" Height="36"/>
            <TextBlock Text="Спасибо за поддержку бегуна в Marathon Skills 2016!
                       Ваше пожертвование пойдёт в его благотворительную организацию." TextWrapping="Wrap"  HorizontalAlignment="Center"  FontFamily="Arial" FontSize="14" Width="416" TextAlignment="Center" Height="59" Margin="0,10,0,0"/>
            <TextBlock x:Name="RunnerTxt" Text="Иван Прудов(204) из Russia" Height="29" HorizontalAlignment="Center" FontSize="20" FontFamily="Arial" Margin="0,10,0,0"/>
            <TextBlock x:Name="FundTxt" Text="Фонд кошек" HorizontalAlignment="Center" FontSize="24" FontFamily="Arial" Margin="0,10,0,0"/>
            <Label x:Name="MoneyTxt" Content="$50" HorizontalAlignment="Center" FontSize="34" FontFamily="Arial" Margin="0,10,0,0"/>
            <Button Content="Назад"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="GoBackButton_Click" Width="70" Height="30" Margin="0,10,0,0"/>

        </StackPanel>


    </Grid>
</Page>
