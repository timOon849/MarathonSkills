<Page x:Class="MarathonSkills.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="#FFEBEBEB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Background="#FF00903E" Grid.Row="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="MARATHON SKILLS 2016" FontFamily="Open Sans Semibold " FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Москва, Россия"  FontFamily="Open Sans Light " FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="среда 21 октября 2016"  FontFamily="Open Sans Light " FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,46,0,0">
            <Button Content="Я хочу стать бегуном"  FontFamily="Open Sans Light " Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="RunnerButton_Click" Margin="0,0,0,10" Height="45" Width="240"/>
            <Button Content="Я хочу стать спонсором бегуна"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="SponsorButton_Click" Margin="0,0,0,10" Height="45"/>
            <Button Content="Я хочу узнать больше о событии"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="MoreInfoButton_Click" Height="45"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Content="Login" FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="#FFFDC100" Click="LoginButton_Click" Margin="710,230,10,55" Grid.Row="1" Height="30"/>
        </StackPanel>


    </Grid>
</Page>
